<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!-- Customized themes -->

    <style name="MyMaterialTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="MyMaterialDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TextSubtitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDetail" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorDetailText</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_detail</item>
    </style>

    <style name="TextTab" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RippleEffect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="FloatingActionButtonLabel">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/colorDetailText</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
