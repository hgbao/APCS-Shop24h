<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    app:cardElevation="@dimen/elevation"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/layoutCustomRowCompany"
            style="@style/RippleEffect"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCustomRowCompanyLogo"
                android:layout_width="@dimen/logo_width_big"
                android:layout_height="@dimen/logo_height_big"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_short"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCustomRowCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="B's Mart"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCustomRowCompanySize"
                    style="@style/TextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="106 chi nhÃ¡nh" />

            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>