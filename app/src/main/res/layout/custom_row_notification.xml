<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    app:cardElevation="@dimen/elevation"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/layoutCustomRowNotification"
            style="@style/RippleEffect"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/marker_height"
                android:layout_height="@dimen/marker_height"
                android:scaleType="fitXY"
                android:src="@drawable/ic_notification" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_short"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCustomRowNotificationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khuyến mãi mới"
                    android:textSize="@dimen/text_subtitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCustomRowNotificationDescription"
                    style="@style/TextDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="B's Mart: Giá rẻ mỗi ngày" />

                <TextView
                    android:id="@+id/txtCustomRowNotificationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/10/2015"
                    android:textSize="@dimen/text_detail"
                    android:layout_gravity="right"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>