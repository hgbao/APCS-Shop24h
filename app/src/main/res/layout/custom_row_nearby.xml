<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height"
        android:layout_weight="1"
        app:cardElevation="@dimen/elevation"
        app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/layoutCustomRowNearbyInformation"
                style="@style/RippleEffect"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCustomRowNearbyLogo"
                    android:layout_width="@dimen/marker_width_small"
                    android:layout_height="@dimen/marker_height_small"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_short"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtCustomRowNearbyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="B's Mart"
                        android:textSize="@dimen/text_subtitle"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCustomRowNearbyAddress"
                        style="@style/TextDetail"
                        android:textSize="@dimen/text_detail_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="69 Nguyễn Khắc Nhu, Phường Cô Giang, Quận 1" />
                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/elevation"
        app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/layoutCustomRowNearbytDirection"
                style="@style/RippleEffect"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_direction"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/txtCustomRowNearbyDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="1.5 km"
                    android:textSize="@dimen/text_detail_small"
                    android:textStyle="italic" />
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>