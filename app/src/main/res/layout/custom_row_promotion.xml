<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height_big"
    app:cardElevation="@dimen/elevation"
    app:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/layoutCustomRowPromotion"
            style="@style/RippleEffect"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imgCustomRowPromotionAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorTransparentGrey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_short"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgCustomRowPromotionLogo"
                        android:layout_width="@dimen/logo_width"
                        android:layout_height="@dimen/logo_height"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_short"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtCustomRowPromotionFrom"
                            style="@style/TextDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Từ: 28/09/2015"
                            android:textColor="@color/colorText" />

                        <TextView
                            android:id="@+id/txtCustomRowPromotionTo"
                            style="@style/TextDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đến: 11/11/2015"
                            android:textColor="@color/colorText" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtCustomRowPromotionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Giá Rẻ Mỗi Ngày"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_subtitle"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </FrameLayout>
</android.support.v7.widget.CardView>